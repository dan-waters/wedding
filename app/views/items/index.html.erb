<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th>Balance</th>
      <th><%= model_class.human_attribute_name(:booked) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td class="<%= item.paid? ? '' : 'red' %>"><%= number_to_currency(item.balance) %></td>
        <td><%= item.booked ? 'Booked' : 'Not Booked' %></td>
        <td>
          <%= link_to t('.payments', :default => t("helpers.links.payments")),
                      item_payments_path(item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_item_path(item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      item_path(item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td><strong>Total:</strong></td>
      <td><%= number_to_currency Item.all.map(&:price).sum %></td>
      <td><%= number_to_currency Item.all.map(&:balance).sum %></td>
      <td></td>
    </tr>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_item_path,
            :class => 'btn btn-primary' %>
