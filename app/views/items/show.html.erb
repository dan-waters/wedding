<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @item.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= number_to_currency(@item.price) %></dd>
  <dt><strong>Balance:</strong></dt>
  <dd class="<%= @item.paid? ? '' : 'red' %>"><%= number_to_currency(@item.balance) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:booked) %>:</strong></dt>
  <dd><%= @item.booked ? 'Booked' : 'Not Booked' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @item.notes %></dd>
</dl>

<%= link_to 'All Items', items_path, :class => 'btn btn-default'  %>
<%= link_to 'Payments', item_payments_path(@item), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t('helpers.links.edit')), edit_item_path(@item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t('helpers.links.destroy')),
              item_path(@item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
