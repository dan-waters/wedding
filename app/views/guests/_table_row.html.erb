<tr id="<%= dom_id(guest) %>">
  <td class="col-xs-4"><%= link_to guest.name, edit_guest_path(guest), remote: true %></td>
  <td class="col-xs-2"><%= link_to guest.invited ? 'Yes' : 'No', edit_guest_path(guest), remote: true %></td>
  <td class="col-xs-2"><%= link_to guest.accepted ? 'Yes' : 'No', edit_guest_path(guest), remote: true %></td>
  <td class="col-xs-4">
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_guest_path(guest), :class => 'btn btn-default btn-xs', data: {remote: true} %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                guest_path(guest),
                :method => :delete,
                :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                :class => 'btn btn-xs btn-danger' %>
  </td>
</tr>