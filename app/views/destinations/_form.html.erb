<%= form_for @destination, url: @url, :html => { :class => "form-horizontal destination" } do |f| %>

    <% if @destination.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @destination.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@destination[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :arrival_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :arrival_date, value: (l(@destination.arrival_date || @honeymoon.from)), class: 'form-control', data: {provide: 'datepicker', date_format: 'dd-mm-yyyy', date_orientation: 'top', date_autoclose: true}  %>
    </div>
    <%= error_span(@destination[:arrival_date]) %>
  </div>
  <div class="control-group">
    <%= f.label :departure_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :departure_date, value: (l(@destination.departure_date || @honeymoon.to)), class: 'form-control', data: {provide: 'datepicker', date_format: 'dd-mm-yyyy', date_orientation: 'top', date_autoclose: true}  %>
    </div>
    <%= error_span(@destination[:departure_date]) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            honeymoon_destinations_path, :class => 'btn btn-default' %>

<% end %>
