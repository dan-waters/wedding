<%- model_class = Destination -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @destination.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arrival_date) %>:</strong></dt>
  <dd><%= l @destination.arrival_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:departure_date) %>:</strong></dt>
  <dd><%= l @destination.departure_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hotel) %>:</strong></dt>
  <dd><%= @destination.hotel ?
                  link_to(@destination.hotel.name, honeymoon_destination_hotel_path(@destination)) +
                          ' ' +
                          link_to(raw(fa_icon('external-link', class: 'th-large')), @destination.hotel.url, target: '_blank') :
                  'No hotel' %></dd>
</dl>

<%= link_to t('.edit_hotel', :default => 'Edit Hotel'),
            edit_honeymoon_destination_hotel_path(@destination), :class => 'btn btn-primary' %>
<%= link_to t('.honeymoon', :default => 'Honeymoon'),
            honeymoon_path, :class => 'btn btn-default' %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_honeymoon_destination_path(@destination), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            honeymoon_destination_path(@destination),
            :method => 'delete',
            :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
            :class => 'btn btn-danger' %>
