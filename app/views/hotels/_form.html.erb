<%= form_for @hotel, url: honeymoon_destination_hotel_path(@destination), :html => { :class => "form-horizontal hotel" } do |f| %>

    <% if @hotel.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@hotel.errors.count, "error") %> prohibited this hotel from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @hotel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@hotel[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
    <%= error_span(@hotel[:url]) %>
  </div>
  <div class="control-group">
    <%= f.label :booked, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :booked %>
    </div>
    <%= error_span(@hotel[:booked]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            honeymoon_destination_hotel_path(@destination), :class => 'btn btn-default' %>

<% end %>
